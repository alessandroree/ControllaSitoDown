<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Pagina principale</title>
</head>
<body>
    <div>
        <form action="/aggiunta-sito" method="POST">
            <label>Inserisci il sito che vuoi aggiungere:</label>
            <br>
            <input type="text" name="url" id="url">
            <button type="submit">Aggiungi</button>
        </form>
    </div>
    <div>
        <h1>Lista Siti</h1>
        <ul>
            <% statusList.forEach(link => { %>
                <li>
                    <a href="<%= link.link %>" target="_blank"><%= link.link %> - <%= link.status %></a>
                    <form action="/rimuovi-sito" method="POST" style="display:inline;">
                        <input type="hidden" name="link" value="<%= link.link %>">
                        <button type="submit">‚ùå Elimina</button>
                    </form>
                </li>
            <% }); %>
        </ul>
    </div>
    
    
</body>
</html>